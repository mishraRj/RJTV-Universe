<div class="signup-wrapper">
    <div class="site-pic">
        <div>
            <img src="https://cdn.jsdelivr.net/gh/mishraRj/rjtv-trailers/General%20Data/rjtv.webp" alt="">

            <!-- ✅ Terms and Conditions checkbox just below image -->
            <div class="terms-check">
                <label for="termsCheckbox">
                    <input type="checkbox" id="termsCheckbox" />
                    I accept all <a href="/home_page/terms_and_conditions" target="_blank">terms and conditions</a>
                </label>
            </div>

        </div>
    </div>

    <div class="signup-container">
        <button class="close-btn" onclick="closePopup2()">
            <i class="fas fa-times"></i>
        </button>
        <h1 id="signUp-h1">✨ Sign Up to Universe</h1>
        <form action="/avatars" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" id="username" name="username" class="form-control" required />
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" id="email" name="email" class="form-control" required />
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" id="password" name="password" class="form-control" minlength="6"
                    title="Password must be at least 6 characters long." required />
            </div>

            <!-- ✅ Button controlled by checkbox -->
            <button class="signup-btn" onclick="return validateTerms()">Sign Up</button>

            <div id="terms-warning" class="terms-msg"></div>
            <!-- ✅ Google button controlled by checkbox -->
            <a href="/auth/google" class="google-btn" onclick="return validateTerms()">
                <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google Logo">
                Sign Up with Google
            </a>
        </form>

        <p class="login-link">Already have an account? <a href="/login">Login</a></p>
    </div>
</div>
